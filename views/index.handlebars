<div class="container">

	<div class="row text-center">
			<img src="/assets/images/crabbyPatty.jpg" alt="burgerPic" class="mx-auto">
	</div>

	<div class="row">
		<div class="col-md-12">
			<h1 class="text-center">Burger Factory</h1>
		</div>
	</div>

	<div class="row">
		<div class="col-md-5">
			<h3>Available Burgers</h3>
			<ul>
				{{#each burgers}}
					{{#unless this.devoured}}
						<li>
							<h5>{{this.id}}. {{this.burger_name}}								
								<input type='hidden' name='devoured' value='true'>
								<button class="eatBurger" data-id={{this.id}} data-dvoured={{this.devoured}}>Devour it</button>
							
							</h5>
						</li>
					{{/unless}}
				{{/each}}
			</ul>
		</div>

		<div class="col-md-2"></div>

		<div class="col-md-5">
			<h3 class="text-muted">Devoured Burgers</h3>
			<ul>
				{{#each burgers}}
					{{#if this.devoured}}
						<li>
							<h5 class="text-muted">{{this.id}}. {{this.burger_name}}</h5>
						</li>
					{{/if}}
				{{/each}}
			</ul>
		</div>

	</div>

	<br><br>

	<div class="row">
		<div class="col-md-12 text-center">
			 <div class="card border-0 rounded-0 mb-3 mx-4 id="options"">
                <h2 class="card-header text-center py-4">Place An Order</h2>
                <div class="card-body">
                <div class="card-text">
                    <form class="create-form">
                    <div class="form-group">
                         <label for="bu">Burger Name:</label>
                            <input type="text" id="burgerName" name="name">
                    </div>
                        <button type="submit" class="btn btn-outline-secondary rounded-0">Place Order</button>
                    </form>
                </div>
            </div>
        </div>
	</div>
</div>